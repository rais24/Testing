<!doctype html>
<html>
<head>
  <%= render "layouts/shared/head_includes" %>
</head>

<body>
  <script type="text/javascript">
  $(document).ready(function(){
    $('#savebtn').click(function(){
      var selected_items = "";
      $(".dietary-needs-tabs").not(".dietary-needs-tabs-untick").each(function(index){
        selected_items += $(this).attr("data")+",";
      });
      $("#dietary_needs").val(selected_items);
      $('#dietary_needs_form').submit();
    });

    $('.dietary-needs-tabs').click(function(){
      $(this).toggleClass('dietary-needs-tabs-untick');
      });
    });

  </script>

<div id="container"> 
  <%= render "layouts/shared/navigation_header_authenticated" %>
  
  <!-- Get Started container  -->
  <div class="get-started-container">
  <div style="width:100%; height:5px;"> </div>
    <h1 class="h1-float-left">Get Started with Fitly!<br /><a href="/account">< Back to Dashboard</a></h1>
     
    <div class="profile-complete"></div>
   
    <div class="contentcontainer">
      <div class="tab">
        <div class="tab1"><a href="#" class="active">1. <span>Dietary Needs</span></a></div>
        <div class="tab1"><a href="#" >2. <span>Dietary Preferences</span></a></div>
        <div class="tab1"><a href="#" >3. <span>Dietary Dislikes</span></a></div>
      </div>
      <%= form_tag(account_path, id:'dietary_needs_form', :method => :put) do %>
        <input type="hidden" name="user[dietary_needs]" id="dietary_needs" />
        <div class="spacer"></div>
        <div class="innerbody">
            <div class="delvinf-container delvinf-container-extra-width">
              <h1>Select your dietary needs from the options below:</h1>
              <div class="<%= determine_tab_state(@user, 'dietary_needs_list', 'lose_weight') %>" data="lose_weight"><span>lose weight</span></div>
              <div class="<%= determine_tab_state(@user, 'dietary_needs_list', 'prevent_diabetes') %>" data="prevent_diabetes"><span>PREVENT DIABETES</span></div>
              <br />
              <div class="<%= determine_tab_state(@user, 'dietary_needs_list', 'manage_diabetes') %>" data="manage_diabetes"><span>MANAGE DIABETES</span></div>
              <div class="<%= determine_tab_state(@user, 'dietary_needs_list', 'gluten_free') %>" data="gluten_free"><span>GLUTEN FREE</span></div>
              <br />
              <div class="<%= determine_tab_state(@user, 'dietary_needs_list', 'heart_healthy') %>" data="heart_healthy"><span>HEART HEALTHY</span></div>
              <div class="<%= determine_tab_state(@user, 'dietary_needs_list', 'low_sodium') %>" data="low_sodium"><span>LOW SODIUM</span></div>
            </div>
        </div>
        <div class="back-nextbtn2">
          <div class="backbtn">
            <input type="button" id="savebtn" value="Save Personal Information" />
          </div>
          <div class="canclebtn"> <a href="/account">Cancel</a></div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Get Started container close --> 
  
  <%= render "layouts/shared/footer" %>
  
</div>
</body>
</html>
