<% content_for :header do %>
	<!-- Facebook Conversion Code for Orders -->
	<script>
		(function() {
		var _fbq = window._fbq || (window._fbq = []);
		if (!_fbq.loaded) {
		var fbds = document.createElement('script');
		fbds.async = true;
		fbds.src = '//connect.facebook.net/en_US/fbds.js';
		var s = document.getElementsByTagName('script')[0];
		s.parentNode.insertBefore(fbds, s);
		_fbq.loaded = true;
		}
		})();
		window._fbq = window._fbq || [];
		window._fbq.push(['track', '6019229497115', {'value':'<%=@order.price%>','currency':'USD'}]);
	</script>
	<noscript>
		<img height="1" width="1" alt="" style="display:none" src="<%=facebook_ad_url.html_safe%>" />
	</noscript>
<% end %>